

@{
    ViewData["Title"] = "Autenticacao".G();
}

<div class="auth-container">

    <form method="post">
        <div class="form-group">
            <label for="email">@("E-mail".G())</label>
            <input class="form-control" required placeholder="@("Informe o e-mail".G())" name="email" />
        </div>
        <div class="form-group">
            <label for="senha">@("Senha".G())</label>
            <input type="password" class="form-control" required placeholder="@("Informe a senha".G())" name="senha" />
        </div>
        <button type="submit" class="btn btn-primary">@("Entrar".G())</button>
    </form>

</div>
